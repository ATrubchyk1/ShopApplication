@using ShopApplication_Utility
@model ShopApplication_Models.OrderHeader

<div class="text-center text-info">
    @if (Model != null)
    {
        <h1 class="text-info">Order Created</h1>
        @if (User.IsInRole(Constants.AdminRole))
        {
            <p>Order #@Model.Id has been created successfully!</p>
        }
        else
        {
            <p>Order has been created successfully!</p>
        }
    }
    else
    {
        <h1 class="text-info">Inquiry Confirmation</h1>
        <p> We have received your inquiry and some from our team will contact you shortly!</p>
    }
    <img src="/images/patio.jpg" width="80%"/>
</div>