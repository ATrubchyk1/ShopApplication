<!DOCTYPE html>
<html lang="en">
@using ShopApplication_Utility
@model ShopApplication_Models.Product;


<form method="post">
    <input asp-for="@Model.Id" hidden/>
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info p-lg-3">Delete product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" id="create_name"/>
                    </div>

                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8 mt-2">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="ShortDescription"></label>
                    </div>
                    <div class="col-8 mt-2">
                        <textarea asp-for="ShortDescription" disabled class="form-control summernote" ></textarea>
                    </div>

                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8 mt-2">
                        <textarea asp-for="Description" disabled class="form-control summernote" ></textarea>
                    </div>

                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8 mt-2">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8 mt-2">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col m-lg-2">
                    
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                    
                        </div>
                        <div class="col m-lg-2">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fa-solid fa-right-from-bracket"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.Id != 0)
                {
                    <img src="@Constants.ImagePath@Model.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb"/>
                }
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/>}
}
<script>
    $(document).ready(function() {
        $('.summernote').summernote({
            height:250,
            disable:true
        });
    });
</script>
</html>
